!#------------------------------------------------#
!#                   Xft Config                   #
!#------------------------------------------------#
Xft.hinting: 1
Xft.autohint: 1
Xft.hintstyle: hintslight
Xft.antialias: 1
Xft.rgba: rgb
Xft.embeddedbitmap: 0

!#------------------------------------------------#
!#             URxvt Configuration                #
!#------------------------------------------------#

! font
URxvt*font: xft:Hack:style=light:size=11,xft:Noto Sans:size=11
URxvt*boldFont: xft:Hack:style=reguler:size=11,xft:Noto Sans:size=11
URxvt*lineSpace: 0
URxvt*letterSpace: -1

! fuck dat scrollbar
URxvt*scrollBar: false

! luv me my blinking underscore cursor
urxvt*cursorUnderline: true
urxvt*cursorBlink: true

! gimme juicy transparency
! and get the color right
urxvt*depth: 32
urxvt*background: #212121
urxvt*foreground: #dfdfdf
URxvt*intensityStyles: false

! padd it
URxvt*internalBorder: 15

